generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cake {
  id          String   @id @default(uuid())
  name        String
  size        String
  baseCost    Float
  basePrice   Float
  description String?

  sales       SaleRecord[]
}

model SaleRecord {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  cakeId        String
  cake          Cake     @relation(fields: [cakeId], references: [id])

  costPrice     Float
  sellingPrice  Float
  profit        Float
  imageURL      String?
  extra         Float?
  remark       String?
}
